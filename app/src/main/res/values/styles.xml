<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@null</item>
        <item name="metaTitleBarStyle">@style/TitleBar</item>
        <item name="metaTitleBarTextStyle">@style/TitleBarText</item>
        <item name="metaTitleBarSubTextStyle">@style/TitleBarSubText</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="TitleBar">
        <item name="android:paddingLeft">@dimen/common_margin</item>
        <item name="android:paddingTop">@dimen/common_margin</item>
        <item name="android:paddingRight">@dimen/common_margin</item>
        <item name="android:paddingBottom">@dimen/common_margin</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="TitleBarText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleBarSubText">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="ButtonBar">
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

</resources>
